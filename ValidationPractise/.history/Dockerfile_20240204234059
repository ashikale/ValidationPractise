FROM openjdk:17

ARG WORKING_DIR=/opt/validation-practise
ENV ARTIFACT_NAME=ValidationPractise-0.0.1-SNAPSHOT.jar
ARG SERVICE_PORT=8082

RUN mkdir ${WORKING_DIR}
WORKDIR ${WORKING_DIR}

COPY target/${ARTIFACT_NAME} ${WORKING_DIR}

EXPOSE ${SERVICE_PORT}

CMD [ "bash","-c","java -jar ${ARTIFACT_NAME}" ]

